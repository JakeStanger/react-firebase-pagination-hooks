{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "react",
    "target": "es6",
    "rootDir": "src",
    "outDir": "dist",
    "module": "commonjs",
    "lib": ["es2018", "dom"],
    "moduleResolution": "node",
    "strict": true,
    "pretty": true,
    "declaration": true,
    "importHelpers": true,
    "noUnusedLocals": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist"]
}
